{
  "name": "promise-api",
  "version": "0.0.0",
  "type": "module",
  "description": "Promise API Server",
  "author": "jinyongp <dev.jinyongp@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "nest": "nest",
    "build": "nest build",
    "start": "nest start --exec \"bun run\"",
    "start:dev": "nest start --exec \"bun run\" --watch",
    "start:debug": "nest start --exec \"bun run\" --debug --watch",
    "start:prod": "bun run ./dist/main.js",
    "migration": "bun run build; ./scripts/migration.sh",
    "format": "prettier --write **/* --ext .ts",
    "lint": "DEBUG=eslint:cli-engine eslint \"src/**/*\" --ext .ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "lint:tsc": "tsc --noEmit",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.458.0",
    "@nestjs/common": "^10.2.4",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.2.4",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/platform-express": "^10.2.4",
    "@nestjs/platform-ws": "^10.2.4",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.10",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.4",
    "class-transformer": "^0.5.1",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "inthash": "^3.0.3",
    "joi": "^17.10.1",
    "mysql2": "^3.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "bun-types": "latest",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}